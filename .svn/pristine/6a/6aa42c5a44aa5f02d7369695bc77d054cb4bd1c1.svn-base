			if (!log_click) log_click = $("#log_click");
			log_click.append("&lt;li class='"+className+"'&gt;"+str+"&lt;/li&gt;");
			if(log_click.children("li").length &gt; 8) {
				log_click.get(0).removeChild(log_click.children("li")[0]);
			}
		}
		function getTime() {
			var now= new Date(),
