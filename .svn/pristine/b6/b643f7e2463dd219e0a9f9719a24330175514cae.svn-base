<script type="text/javascript">

var setting_async = {
    id:"#treeDemo_async",//容器id
    data: {
		simpleData: {
		enable: true
		}
	},
    async: {
		enable: true,
		url:"../FrontEndSampleCenter/tree/asyncData/getDemoData.jsp",
		autoParam:[ "id"]
	}
};
new biz.tree(setting_async);//创建树

</script>
